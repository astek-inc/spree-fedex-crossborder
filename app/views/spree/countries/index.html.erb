<div id="country-select">
  <h1>Select Your Country</h1>

  <div class="well well-lg">
    Select your country to see product prices in your currency and the payment and shipping options available for your location.
    Sorry, shipping is not available to countries with names that are <span class="unavailable">crossed out</span>.
  </div>

  <%= @countries.in_groups_of (@countries.count.to_f / 2).ceil, false do |group| %>
    <div class="list-group col-sm-6">
      <% group.each do |country| %>
        <%= link_to flag_icon(country.iso) + ' ' + country.name, select_country_path(country.id), { class: 'list-group-item' + (country.iso == current_country ? ' active' : '') + (country.shipping_available ? ' available' : ' unavailable') } %>
      <% end %>
    </div>
  <% end %>
</div>
