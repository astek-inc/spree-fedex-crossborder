<% content_for :page_title do %>
    <%= Spree.t(:currencies, scope: :fedex_crossborder) %>
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new) + ' ' + Spree.t(:currency, scope: :fedex_crossborder), new_object_url, { :class => 'btn-success', :icon => 'add', 'data-update' => 'new_currency', :id => 'new_currency_link' } %>
<% end %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>

<% if @collection.any? %>
    <table class="table" id="listing_currencies">
      <thead>
      <tr data-hook="admin_currencies_index_headers">
        <th class="name"><%= Spree.t(:name, scope: :fedex_crossborder) %></th>
        <th class="code"><%= Spree.t(:code, scope: :fedex_crossborder) %></th>
        <th class="symbol"><%= Spree.t(:symbol, scope: :fedex_crossborder) %></th>
        <th class="symbol-position"><%= Spree.t(:symbol_position, scope: :fedex_crossborder) %></th>
        <th data-hook="admin_currencies_index_header_actions" class="actions"></th>
      </tr>
      </thead>
      <tbody>
      <% @collection.each do |currency| %>
          <tr id="<%= spree_dom_id currency %>" data-hook="admin_currencies_index_rows" class="<%= cycle('odd', 'even') %>">
            <td class="name"><%= currency.name %></td>
            <td class="code"><%= currency.code %></td>
            <td class="symbol"><%= currency.symbol %></td>
            <td class="symbol-position"><%= Spree.t(currency.symbol_position, scope: :fedex_crossborder) %></td>
            <td class="actions actions-2 text-right">
              <%= link_to_edit(currency, :no_text => true) %>
              <%= link_to_delete(currency, :no_text => true) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="alert alert-info no-objects-found">
      <%= Spree.t(:no_resource_found, resource: Spree.t(:currencies, scope: :fedex_crossborder)) %>.
    </div>
<% end %>

<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>
