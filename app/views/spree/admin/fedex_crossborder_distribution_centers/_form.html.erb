<div class="row">
  <%= f.field_container :name, class: %w[form-group col-md-8] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :required => true, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :address_line_1, class: %w[form-group col-md-8] do %>
      <%= f.label :address_line_1, Spree.t(:address_line_1) %> <span class="required">*</span>
      <%= f.text_field :address_line_1, :required => true, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :address_line_2, class: %w[form-group col-md-8] do %>
      <%= f.label :address_line_2, Spree.t(:address_line_2) %>
      <%= f.text_field :address_line_2, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :city, class: %w[form-group col-md-8] do %>
      <%= f.label :city, Spree.t(:city) %> <span class="required">*</span>
      <%= f.text_field :city, :required => true, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :state_id, class: %w[form-group col-md-8] do %>
      <%= f.label :state, Spree.t(:state, scope: :fedex_crossborder) %> <span class="required">*</span>
      <%= f.select :state_id, @states.collect { |s| [s.name, s.id] }, {}, { :required => true, :class => 'form-control' } %>
      <%= f.error_message_on :state_id %>
  <% end %>

  <%= f.field_container :zip, class: %w[form-group col-md-8] do %>
      <%= f.label :zip, Spree.t(:zip) %> <span class="required">*</span>
      <%= f.text_field :zip, :required => true, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :zones_id, class: %w[form-group col-md-8] do %>
      <%= f.label :zone, Spree.t(:zone, scope: :fedex_crossborder) %> <span class="required">*</span>
      <%= f.select :zone_id, @zones.collect { |s| [s.name, s.id] }, {}, { :required => true, :class => 'form-control' } %>
      <%= f.error_message_on :zone_id %>
  <% end %>
</div>
